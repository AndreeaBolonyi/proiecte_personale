<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Pagination?>
<AnchorPane stylesheets="/css/userPage.css" fx:id="rootAnchorPane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" fx:controller="socialnetwork.controller.userPageController">
    <BorderPane styleClass="border-pane">
        <top>
            <HBox alignment="TOP_RIGHT">
                <BorderPane styleClass="header-section">
                    <right>
                        <VBox>
                            <HBox>
                                <Button fx:id="account">
                                    <graphic>
                                        <ImageView fitHeight="30" fitWidth="30"
                                                   pickOnBounds="true" preserveRatio="true">
                                            <Image url="@/images/accountLogo.png"/>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button styleClass="buttonLogOut" onAction="#handleLogoutButtonAction" text="Log-out"/>
                            </HBox>
                        </VBox>
                    </right>
                </BorderPane>
            </HBox>
        </top>

        <left>
            <VBox styleClass="sidebar-section-left">
                <Button styleClass="buttonUserPage" onAction="#handleActivity" text="Activity"/>
                <Button styleClass="buttonUserPage" onAction="#handleMessages" text="Messages"/>
                <Button styleClass="buttonUserPage" onAction="#handleRequests" text="Requests"/>
                <Button styleClass="buttonUserPage" onAction="#handleEvents" text="Events"/>
            </VBox>
        </left>

        <center>
            <VBox spacing="20" alignment="CENTER">
                <HBox spacing="10">
                    <Label text="Search user"/>
                    <TextField fx:id="textFieldSearch"/>
                    <RadioButton fx:id="friends" onAction="#handleFriends" text="Only friends in table"/>
                </HBox>
                <TableView styleClass="tableView" fx:id="tableViewUsers" prefHeight="300">
                    <columns>
                        <TableColumn styleClass="column" fx:id="tableColumnFirstName" prefWidth="138.0" text="First name"/>
                        <TableColumn styleClass="column" fx:id="tableColumnLastName" prefWidth="105.0" text="Last name"/>
                        <TableColumn styleClass="column" fx:id="tableColumnEmail" prefWidth="200.0" text="Email"/>
                    </columns>
                </TableView>
                <Pagination fx:id="paginationTableView"/>
            </VBox>
        </center>

        <right>
            <VBox spacing="15" alignment="CENTER">
                <Button fx:id="addFriend"  styleClass="buttonAdd" onAction="#handleAddFriend"/>
                <Button fx:id="removeFriend" styleClass="buttonAdd" onAction="#handleDeleteFriend"/>
                <Button fx:id="sendRequest" styleClass="buttonAdd" onAction="#handleSendRequest" text="Send request"/>
            </VBox>
        </right>
    </BorderPane>
</AnchorPane>
