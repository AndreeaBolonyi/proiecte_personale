<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane stylesheets="/css/startPage.css" fx:id="rootAnchorPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="socialnetwork.controller.startPageController" prefHeight="2000" prefWidth="2000">
    <BorderPane >
       <center>
           <SplitPane styleClass="split-pane">
               <ImageView fitHeight="400" fitWidth="400"
                          pickOnBounds="true" preserveRatio="true">
                   <Image url="@/images/2.png"/>
               </ImageView>

                   <VBox alignment="CENTER" spacing="10">
                       <GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml">
                           <padding>
                               <Insets bottom="10" left="25" right="25" top="25"/>
                           </padding>
                           <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                           <TextField fx:id="textFieldEmail" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                           <Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                           <PasswordField fx:id="textFieldPassword" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                           <VBox GridPane.columnIndex="1" GridPane.rowIndex="3" spacing="5">
                               <Label fx:id="wrongPassword"/>
                               <RadioButton fx:id="rememberMeButton" text="Remember me" onAction="#handleRemember"/>
                               <Button onAction="#handleButtonLoginAction" styleClass="buttonLogIn" text="Log-in"/>
                               <Button onAction="#handleButtonSigninAction" styleClass="buttonSignIn"
                                       text="Register as a new user"/>
                           </VBox>
                       </GridPane>

                   </VBox>
           </SplitPane>
       </center>

        <top>
        <HBox alignment="BASELINE_CENTER">
            <Label styleClass="labelWelcome" text="Welcome to Social App!"/>
        </HBox>
        </top>
    </BorderPane>

</AnchorPane>