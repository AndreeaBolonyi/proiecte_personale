<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.Group?>
<AnchorPane stylesheets="/css/signInPage.css" fx:id="rootAnchorPane" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="socialnetwork.controller.signInPageController">
        <VBox alignment="center" spacing="10" AnchorPane.leftAnchor="200" AnchorPane.topAnchor="100" AnchorPane.bottomAnchor="200" AnchorPane.rightAnchor="200">
            <Label text="Register form" styleClass="label"/>
            <GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml">
                <padding>
                    <Insets bottom="25" left="25" right="25" top="25" />
                </padding>

                <Label text="First name" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="textFieldFirstName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Last name" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="textFieldLastName" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="textFieldEmail" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <PasswordField fx:id="textFieldPassword" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <Label text="Repeat password" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <PasswordField fx:id="textFieldPassword2" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <HBox spacing="50" GridPane.columnIndex="1" GridPane.rowIndex="6">
                <Button styleClass="buttonSignInPage" onAction="#handleButtonAction" text="Register"/>
                <Button styleClass="buttonSignInPage" onAction="#handleCancelButtonAction" text="Cancel"/>
            </HBox>
            </GridPane>
        </VBox>
</AnchorPane>
